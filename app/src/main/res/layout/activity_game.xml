<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30313F">

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создание уровня"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/level_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="SEED уровня:"
            android:textColor="#FFFFFF"/>

        <EditText
            android:id="@+id/level_input"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:hint="Введите SEED (пропустите для случайного)"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:inputType="number" />

        <TextView
            android:id="@+id/difficulty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сложность:"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/difficulty_spinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="#FFFFFF"

            android:entries="@array/difficulty_options" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="НАЧАТЬ"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="back"
        android:background="@drawable/button_back"/>

</RelativeLayout>
